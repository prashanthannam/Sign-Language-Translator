<div class="container p-md-5">
    <div class="row">
        <div class="col-md-12">
            <div class="jumbotron bg-white shadow">
                <div class="d-flex justify-content-center">
                    <h1>{{title}}</h1>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="rounded bg-dark pl-2 pr-2 pt-2 pb-1">
                <video id="webcam" width="100%" autoplay></video>
            </div>
        </div>
